<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.randomone.androidmonsterc3">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="Degree Programme Manager"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity" />
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SplahScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ModuleCreatorActivity"
            android:label="Create/Edit Module" />
        <activity
            android:name=".StudentCreatorActivity"
            android:label="Create/Edit Student" />

        <activity
            android:name=".ModuleActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>
</manifest>