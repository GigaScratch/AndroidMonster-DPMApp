                    android:padding="12dp">

                    <TextView
                        android:id="@+id/card_title_SE"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginEnd="50dp"
                        android:autoSizeTextType="uniform"
                        android:maxLines="1"
                        android:text="Software Engineering (SE)"
                        android:textColor="@color/wintecDarkGrey" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/txtModuleTotalSE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total SE Modules : "
                        android:textSize="14sp" />





                </RelativeLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/NECard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:checkable="true"
            android:clickable="true"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/wintecYellow"
            app:strokeWidth="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/wintecYellow"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/card_title_NE"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginEnd="50dp"
                        android:autoSizeTextType="uniform"
                        android:maxLines="1"
                        android:text="Network Engineering (NE)"
                        android:textColor="@color/wintecDarkGrey" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/txtModuleTotalNE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total NE Modules : "
                        android:textSize="14sp" />





                </RelativeLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/DBCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:checkable="true"
            android:clickable="true"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/wintecYellow"
            app:strokeWidth="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
