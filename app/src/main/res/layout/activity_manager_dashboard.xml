                        android:text="Total DB Modules : "
                        android:textSize="14sp" />





                </RelativeLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/WDCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:checkable="true"
            android:clickable="true"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/wintecYellow"
            app:strokeWidth="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/wintecYellow"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/card_title_WD"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginEnd="50dp"
                        android:autoSizeTextType="uniform"
                        android:maxLines="1"
                        android:text="Multimedia Web Development (WD)"
                        android:textColor="@color/wintecDarkGrey" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
