<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TELL US WHO YOU ARE ?"
        android:layout_above="@id/button_entrance_student"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/button_entrance_student"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="STUDENT"
        android:layout_centerInParent="true"
        android:background="@color/wintecYellow"/>

    <Button
        android:layout_below="@id/button_entrance_student"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_entrance_manager"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="MANAGER"
        android:layout_marginTop="8dp"
        android:background="@color/wintecYellow"/>

