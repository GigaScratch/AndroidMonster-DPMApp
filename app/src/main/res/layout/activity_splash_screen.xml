<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDD00"
    android:padding="16dp"
    tools:context=".SplashScreenActivity">

    <ImageView
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:layout_above="@id/center_logo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/winteclogo" />

    <ImageView
        android:id="@+id/center_logo"
        android:layout_width="10sp"
        android:layout_height="10sp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_androidy" />

    <ImageView
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:src="@drawable/androidmonsterlogo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A one stop application for\n students and managers"
        android:textSize="20sp"
        android:layout_below="@+id/center_logo"
        android:layout_centerInParent="true"/>


</RelativeLayout>