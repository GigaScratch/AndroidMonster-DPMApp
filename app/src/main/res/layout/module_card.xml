<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:checkable="true"
    android:clickable="true"
    app:cardCornerRadius="16dp"
    app:strokeColor="@color/wintecYellow"
    app:strokeWidth="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/module_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/wintecYellow"
            android:padding="12dp">

            <TextView
                android:id="@+id/module_name"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginEnd="50dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:text="Test module Brown Cow"
                android:textColor="@color/wintecDarkGrey" />

            <CheckBox
                android:id="@+id/module_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/module_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YEET123"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/module_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/module_code"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec feugiat elit eu imperdiet imperdiet. Integer viverra efficitur metus, at feugiat mi egestas quis. Nunc ultricies turpis at mi fringilla pulvinar. Donec quis purus dignissim, consectetur erat id, fringilla nulla. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce cursus, nunc in condimentum dignissim, augue mauris varius magna, eu hendrerit diam urna non est. Aliquam ac tortor nulla. Nam bibendum fermentum aliquam. Duis auctor elit quis turpis eleifend tempor. Nulla ac nulla eget est interdum pharetra. "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/module_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/module_description"
                android:text="Level 7"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/module_credits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/module_description"
                android:layout_marginStart="18dp"
                android:layout_toRightOf="@id/module_level"
                android:text="15 Credits"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>